<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.keington.mapper.UserMapper">

    <select id="UserList" resultType="User">
        select * from sys_user
    </select>

    <select id="UserById" resultType="User">
        select * from sys_user where id = #{id}
    </select>

    <insert id="addUser" parameterType="User">
        insert into sys_user (id,name,password) values (#{id},#{name},#{password})
    </insert>

    <update id="updateUser" parameterType="User">
        update sys_user set name=#{name}, password=#{password} where id = #{id}
    </update>

    <delete id="deleteUser" parameterType="int">
        delete from sys_user where id = #{id}
    </delete>

</mapper>
